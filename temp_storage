def portal_fruit():
    print("portal fruit 205 million")
    print("Portal Dash ( Z ) Mastery cost: 1 Mastery. Damage: 3104. ...")
    print("Parallel Escape ( X ) Mastery cost: 50 Mastery. Damage: 2760. ...")
    print("World Warp ( C ) Mastery cost: 200 Mastery. Damage: n/a. ...")
    print("Dimensional Rift ( V ) Mastery cost: 300 Mastery. Damage: 7520. ...")
    print("Quantum Leap ( F ) Mastery cost: 100 Mastery. Damage: 1724.")
    how_many = int(input("how many would you like?"))
    global total
    total += 205000000 * how_many
    return 205000000 * how_many

def rubber_fruit():
    print("rubber fuit 750,000")
    print("Immunity to Rumble and Electric fighting style.")
    print("Immunity to gun attacks.")
    print("High damage output.")
    print("Decent range.")
    print("All moves are AoE.")
    print("Great for bosses and raids, having high damage and stuns with decent range.")
    print("Speed, damage, knockback, and range all increase when in Transformation.")
    how_many = int(input("how many would you like?"))
    global total
    total += 750000 * how_many
    return 750000 * how_many

def shop():
    while True:
        print("what do you need")
        print("we have: light_fruit, awakened light fruit, full body haki, budda, awakened budda, dark fruit, awakened dark fruit, portal fruit, rubber fruit")
        print('Type "leave_then_leave_" to leave')
        rock = input()
        if rock == "light_fruit":
            boulder = light_fruit()
            print("the price is " + str(boulder))
        elif rock == "light fruit awakened":
            boulder = light_fruit_awakened()
            print("the price is " + str(boulder))
        elif rock == "full body haki":
            boulder = full_body_haki()
            print("the price is " + str(boulder))
        elif rock == "budda":
            boulder = budda()
            print("the price is " + str(boulder))
        elif rock == "awakened budda":
            boulder = awakened_budda()
            print("the price is " + str(boulder))
        elif rock == "dark fruit":
            boulder = dark_fruit()
            print("the price is " + str(boulder))
        elif rock == "awakened dark fruit":
            boulder = awakened_dark_fruit()
            print("the price is " + str(boulder))
        elif rock == "portal fruit":
            boulder = portal_fruit()
            print("the price is " + str(boulder))
        elif rock == "rubber fruit":
            boulder = rubber_fruit()
            print("the price is " + str(boulder))
        elif rock == "leave_then_leave_":
            print("total: " + str(total))
            break

shop()
